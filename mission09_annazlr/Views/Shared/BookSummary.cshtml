@{
}

@model Book

@* class = card makes the outline of the different boxes for each book. *@
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge bg-primary rounded-pill" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">
        <ul>
            <li>Author Name: @Model.Author</li>
            <li>Publisher Name: @Model.Publisher</li>
            <li>ISBN: @Model.Isbn</li>
            <li>Classification/Category: @Model.Classification @Model.Category</li>
            <li>Number of Pages: @Model.PageCount</li>
            <li>Price: $@Model.Price</li>
        </ul>
    </div>
</div>
